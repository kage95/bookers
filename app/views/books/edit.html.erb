<h1>Editing Book</h1>

<% if @book.errors.any?%>
<p><%= @book.errors.count %>件のerrorがあります。</p>

<ul>
  <% @book.errors.full_messages.each do |message|%>
  <li>
    <%= message %>
  </li>
  <%end%>
</ul>
<%end%>

<%=form_with model:@book,url:update_book_path(@book.id),method: :patch,local: true do |f|%>

<div class="form-box">
<label>Title</label>
<%= f.text_field:title%>
</div>

<div class="form-box">
<label>Body</label>
<%= f.text_area:body%>
</div>

<div class="btn">
<%= f.submit'Update Book'%>
</div>
<%end%>

<%= link_to "Show",book_path(@book.id)%>
|
<%= link_to "Back",books_path %>